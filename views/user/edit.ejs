<%- include('../inc/top') %>


    <!-- Chức Năng Chính -->
    <div class="d-flex justify-content-start content fixed-top mt-5 align-items-center"
        style="background-color: #F5F5F5; min-height: 70px;">
        <div class="ms-2 d-flex align-items-center">
            <h5 class="m-2">
                <%= title %>
            </h5>
            <span class="ms-3 text-success fw-bold" class="alert alert-success" role="alert">
                <%= msg %>
            </span>
        </div>

    </div>

    <form method="POST" action="" style="margin-top: 140px; border-radius: 1px; " class="mx-5">

        <div class="form-floating mb-4">
            <input type="text" class="form-control" id="floatingName" placeholder="Tên Đăng Nhập" required
                value="<%= objUser.userName%>" name="userName">
            <label for="floatingName">Tên Đăng Nhập</label>
        </div>

        <div class="form-floating mb-4">
            <input type="email" class="form-control" id="floatingEmail" placeholder="Email" required name="email"
                value="<%= objUser.email%>">
            <label for="floatingEmail">Email</label>
        </div>

        <div class="form-floating mb-4">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Mật Khẩu" required
                value="<%= objUser.passWord%>" name="passWord">
            <label for="floatingPassword">Mật Khẩu</label>
        </div>

        <div class="form-floating mb-4">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Nhập Lại Mật Khẩu" required
                value="<%= objUser.passWord%>" name="checkPassWord">
            <label for="floatingPassword">Nhập Lại Mật Khẩu</label>
        </div>

        <div class="form-floating my-4 d-flex ">
            <div class="ms-3">
                Vai Trò
            </div>
            <div class="form-check  d-flex justify-content-between">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="role" id="flexRadioDefault2" value="User" <% {
                        let check='' ; if(String(objUser.role)==String('User')){ check='checked' ; } %>
                    <%= check %>
                        <% } %>
                            >
                            <label class="form-check-label" for="flexRadioDefault2">
                                User
                            </label>
                </div>
                <div class="form-check ms-3">
                    <input class="form-check-input" type="radio" name="role" id="flexRadioDefault1" value="Admin" <% {
                        let check='' ; if(String(objUser.role)==String('Admin')){ check='checked' ; } %>
                    <%= check %>
                        <% } %>
                            >
                            <label class="form-check-label" for="flexRadioDefault1">Admin</label>
                </div>
            </div>
        </div>




        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
            <a href="/user"><button type="button" class="btn btn-secondary mx-4" data-bs-dismiss="modal">Trở
                    Lại</button></a>
            <button type="submit" class="btn btn-primary" method="POST">Lưu</button>
        </div>

    </form>

    </div>



    <%- include('../inc/bottom') %>